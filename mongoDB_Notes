   if(err){
      return console.log(`Unable to connect MangoDB Server....`);
   }
   console.log('Connected to MangoDB Server...');

   db.collection('Users').insertOne({
     name:'Raman',
     age:27,
     location:"Bangalore"
   },(err,res)=>{
 
      if(err){
